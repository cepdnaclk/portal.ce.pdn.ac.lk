{
    "openapi": "3.0.3",
    "info": {
        "title": "Academics API",
        "version": "1.0.0",
        "description": "Undergraduate courses and semesters exposed for curriculum browsing."
    },
    "servers": [
        {
            "url": "https://portal.ce.pdn.ac.lk/api",
            "description": "API base"
        }
    ],
    "paths": {
        "/academic/v1/undergraduate/courses": {
            "get": {
                "summary": "List undergraduate courses",
                "description": "Returns courses for the undergraduate program with optional filtering.",
                "tags": ["Academics"],
                "parameters": [
                    {
                        "name": "curriculum",
                        "in": "query",
                        "required": false,
                        "schema": { "type": "integer", "enum": [0, 1, 2] },
                        "description": "Curriculum version enum (Course.version)."
                    },
                    {
                        "name": "semester",
                        "in": "query",
                        "required": false,
                        "schema": { "type": "integer" },
                        "description": "Semester id (Course.semester_id)."
                    },
                    {
                        "name": "type",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "enum": ["Core", "GE", "TE"]
                        },
                        "description": "Course type enum (Core, GE, TE)."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Paginated course list",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Course"
                                            }
                                        },
                                        "links": {
                                            "$ref": "#/components/schemas/PaginationLinks"
                                        },
                                        "meta": {
                                            "$ref": "#/components/schemas/PaginationMeta"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/academic/v1/undergraduate/semesters": {
            "get": {
                "summary": "List undergraduate semesters",
                "description": "Returns semesters for the undergraduate program with optional filtering.",
                "tags": ["Academics"],
                "parameters": [
                    {
                        "name": "curriculum",
                        "in": "query",
                        "required": false,
                        "schema": { "type": "integer", "enum": [0, 1, 2] },
                        "description": "Curriculum version enum (Semester.version)."
                    },
                    {
                        "name": "semester",
                        "in": "query",
                        "required": false,
                        "schema": { "type": "integer" },
                        "description": "Semester id filter."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Paginated semester list",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Semester"
                                            }
                                        },
                                        "links": {
                                            "$ref": "#/components/schemas/PaginationLinks"
                                        },
                                        "meta": {
                                            "$ref": "#/components/schemas/PaginationMeta"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "AcademicProgram": {
                "type": "object",
                "properties": {
                    "category": { "type": "string" },
                    "version": { "type": "integer", "enum": [0, 1, 2] },
                    "curriculum_name": { "type": "string" }
                }
            },
            "CourseModule": {
                "type": "object",
                "properties": {
                    "topic": { "type": "string" },
                    "description": { "type": "string" },
                    "time_allocation": {
                        "type": "object",
                        "additionalProperties": true
                    },
                    "created_at": { "type": "string", "format": "date-time" },
                    "updated_at": { "type": "string", "format": "date-time" }
                }
            },
            "CoursePrerequisite": {
                "type": "object",
                "properties": {
                    "id": { "type": "integer" },
                    "code": { "type": "string" },
                    "name": { "type": "string" },
                    "urls": {
                        "type": "object",
                        "properties": {
                            "view": { "type": "string", "format": "uri" },
                            "edit": { "type": "string", "format": "uri" }
                        }
                    }
                }
            },
            "Course": {
                "type": "object",
                "properties": {
                    "id": { "type": "integer" },
                    "code": { "type": "string" },
                    "name": { "type": "string" },
                    "content": { "type": "string" },
                    "credits": { "type": "number" },
                    "type": {
                        "type": "string",
                        "enum": ["Core", "GE", "TE"]
                    },
                    "semester_id": { "type": "integer" },
                    "academic_program": {
                        "$ref": "#/components/schemas/AcademicProgram"
                    },
                    "teaching_methods": { "type": "string" },
                    "objectives": { "type": "string" },
                    "time_allocation": {
                        "type": "object",
                        "additionalProperties": true
                    },
                    "marks_allocation": {
                        "type": "object",
                        "additionalProperties": true
                    },
                    "ilos": { "type": "array", "items": { "type": "string" } },
                    "references": {
                        "type": "array",
                        "items": { "type": "string" }
                    },
                    "modules": {
                        "type": "array",
                        "items": { "$ref": "#/components/schemas/CourseModule" }
                    },
                    "prerequisites": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/CoursePrerequisite"
                        }
                    },
                    "urls": {
                        "type": "object",
                        "properties": {
                            "view": { "type": "string", "format": "uri" },
                            "edit": { "type": "string", "format": "uri" }
                        }
                    },
                    "created_at": { "type": "string", "format": "date-time" },
                    "updated_at": { "type": "string", "format": "date-time" }
                },
                "required": [
                    "id",
                    "code",
                    "name",
                    "credits",
                    "type",
                    "semester_id",
                    "academic_program",
                    "created_at",
                    "updated_at"
                ]
            },
            "Semester": {
                "type": "object",
                "properties": {
                    "id": { "type": "integer" },
                    "title": { "type": "string" },
                    "academic_program": {
                        "$ref": "#/components/schemas/AcademicProgram"
                    },
                    "description": { "type": "string" },
                    "url": { "type": "string", "format": "uri" },
                    "courses_count": { "type": "integer" },
                    "created_at": { "type": "string", "format": "date-time" },
                    "updated_at": { "type": "string", "format": "date-time" }
                },
                "required": [
                    "id",
                    "title",
                    "academic_program",
                    "description",
                    "url",
                    "created_at",
                    "updated_at"
                ]
            },
            "PaginationLinks": {
                "type": "object",
                "properties": {
                    "first": { "type": "string", "format": "uri" },
                    "last": { "type": "string", "format": "uri" },
                    "prev": {
                        "type": "string",
                        "format": "uri",
                        "nullable": true
                    },
                    "next": {
                        "type": "string",
                        "format": "uri",
                        "nullable": true
                    }
                }
            },
            "PaginationMeta": {
                "type": "object",
                "properties": {
                    "current_page": { "type": "integer" },
                    "from": { "type": "integer", "nullable": true },
                    "last_page": { "type": "integer" },
                    "links": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "url": {
                                    "type": "string",
                                    "format": "uri",
                                    "nullable": true
                                },
                                "label": { "type": "string" },
                                "active": { "type": "boolean" }
                            }
                        }
                    },
                    "path": { "type": "string", "format": "uri" },
                    "per_page": { "type": "integer" },
                    "to": { "type": "integer", "nullable": true },
                    "total": { "type": "integer" }
                }
            },
            "Error": {
                "type": "object",
                "properties": { "message": { "type": "string" } }
            }
        }
    }
}
