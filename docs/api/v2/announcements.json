{
  "openapi": "3.0.3",
  "info": {
    "title": "Announcements API (V2)",
    "version": "1.0.0",
    "description": "Public endpoints that expose active announcements (v2)."
  },
  "servers": [
    {
      "url": "https://portal.ce.pdn.ac.lk/api",
      "description": "API base"
    }
  ],
  "tags": [
    {
      "name": "Announcements"
    }
  ],
  "paths": {
    "/announcements/v2": {
      "get": {
        "summary": "Redirect to default tenant (v2)",
        "description": "Redirects to /announcements/v2/{tenant_slug} using the default tenant slug.",
        "tags": [
          "Announcements"
        ],
        "responses": {
          "302": {
            "description": "Redirect to tenant-scoped endpoint",
            "headers": {
              "Location": {
                "schema": {
                  "type": "string",
                  "format": "uri"
                }
              }
            }
          }
        }
      }
    },
    "/announcements/v2/{tenant_slug}": {
      "get": {
        "summary": "List announcements (v2)",
        "description": "Returns active announcements for the specified tenant. Optionally filter by area.",
        "tags": [
          "Announcements"
        ],
        "parameters": [
          {
            "name": "tenant_slug",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "area",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "frontend",
                "backend",
                "both"
              ]
            },
            "description": "Filter announcements by area."
          }
        ],
        "responses": {
          "200": {
            "description": "Announcements list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Announcement"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Tenant not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Announcement": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "area": {
            "type": "string",
            "enum": [
              "frontend",
              "backend",
              "both"
            ]
          },
          "type": {
            "type": "string",
            "enum": [
              "info",
              "danger",
              "warning",
              "success"
            ]
          },
          "message": {
            "type": "string"
          },
          "starts_at": {
            "type": "string",
            "format": "date-time"
          },
          "ends_at": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "id",
          "area",
          "type",
          "message",
          "starts_at",
          "created_at",
          "updated_at"
        ]
      },
      "Error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}