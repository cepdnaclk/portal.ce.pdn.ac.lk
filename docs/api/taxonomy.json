{
    "openapi": "3.0.3",
    "info": {
        "title": "Taxonomy API",
        "version": "1.0.0",
        "description": "Public taxonomy discovery for category structures and terms."
    },
    "servers": [
        {
            "url": "https://portal.ce.pdn.ac.lk/api",
            "description": "API base"
        }
    ],
    "paths": {
        "/taxonomy/v1/": {
            "get": {
                "summary": "List taxonomies",
                "description": "Returns all visible taxonomies with basic metadata.",
                "tags": ["Taxonomy"],
                "responses": {
                    "200": {
                        "description": "Visible taxonomies",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/TaxonomyListItem"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "No taxonomies",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/TaxonomyError"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/TaxonomyError"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/taxonomy/v1/{taxonomy_code}": {
            "get": {
                "summary": "Get a taxonomy",
                "description": "Returns a single taxonomy if it is visible.",
                "tags": ["Taxonomy"],
                "parameters": [
                    {
                        "name": "taxonomy_code",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Taxonomy",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/Taxonomy"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not available",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/TaxonomyError"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/TaxonomyError"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/taxonomy/v1/term/{term_code}": {
            "get": {
                "summary": "Get a taxonomy term",
                "description": "Returns a single term; response includes top-level taxonomy code and child terms if present.",
                "tags": ["Taxonomy"],
                "parameters": [
                    {
                        "name": "term_code",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Taxonomy term",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "data": {
                                            "allOf": [
                                                {
                                                    "$ref": "#/components/schemas/TaxonomyTerm"
                                                },
                                                {
                                                    "type": "object",
                                                    "properties": {
                                                        "taxonomy": {
                                                            "type": "string",
                                                            "description": "Code of the taxonomy this term belongs to."
                                                        }
                                                    },
                                                    "required": ["taxonomy"]
                                                }
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Term not available",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/TaxonomyError"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/TaxonomyError"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "TaxonomyListItem": {
                "type": "object",
                "properties": {
                    "code": { "type": "string" },
                    "name": { "type": "string" },
                    "description": { "type": "string" },
                    "api": { "type": "string", "format": "uri" }
                }
            },
            "Taxonomy": {
                "type": "object",
                "properties": {
                    "code": { "type": "string" },
                    "name": { "type": "string" },
                    "description": { "type": "string" },
                    "properties": {
                        "type": "object",
                        "additionalProperties": true
                    },
                    "terms": {
                        "type": "array",
                        "items": { "$ref": "#/components/schemas/TaxonomyTerm" }
                    }
                },
                "required": [
                    "code",
                    "name",
                    "description",
                    "properties",
                    "terms"
                ]
            },
            "TaxonomyTerm": {
                "type": "object",
                "properties": {
                    "code": { "type": "string" },
                    "name": { "type": "string" },
                    "terms": {
                        "type": "array",
                        "items": { "$ref": "#/components/schemas/TaxonomyTerm" }
                    },
                    "metadata": {
                        "type": "object",
                        "additionalProperties": true
                    }
                },
                "required": ["code", "name"]
            },
            "TaxonomyError": {
                "type": "object",
                "properties": {
                    "status": { "type": "string" },
                    "message": { "type": "string" }
                }
            }
        }
    }
}
